<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    
     <RelativeLayout
        android:background="#FF5D5E"
        android:layout_width="fill_parent"
        android:layout_height="50dp" >

        <ImageView 
            android:id="@+id/fanhui_view"
            android:src="@drawable/zoujiantou"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp" />

        <TextView
            android:id="@+id/yuerbiji_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="育儿笔记"
            android:textColor="#84FFFF"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/bianji_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:textColor="#84FFFF"
            android:text="编辑" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/wenzihuiyi_view"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawableTop="@drawable/wenzihuiyi"
            android:gravity="center"
            android:text="文字回忆" />

        <TextView
            android:id="@+id/diy_view"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawableTop="@drawable/diy"
            android:gravity="center"
            android:text="个性DIY回忆" />

        <TextView
            android:id="@+id/xiangcehuiyi_view"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawableTop="@drawable/xiangcehuiyi"
            android:gravity="center"
            android:text="相册回忆" />

    </LinearLayout>

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:background="#C6C6C6" />

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="200dp" 
        android:layout_marginTop="15dp">

        <TextView
            android:id="@+id/text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="还没有添加任何相册回忆"
            android:textColor="#bbbbbb"
            android:textSize="15sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/text"
            android:layout_centerHorizontal="true"
            android:text="赶紧添加吧！"
            android:textColor="#bbbbbb"
            android:textSize="15sp" />

    </RelativeLayout>
    <RelativeLayout 
        android:layout_width="fill_parent"
        android:layout_height="100dp"
        android:layout_marginTop="10dp">
    <Button 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="添加图片"
        android:layout_centerInParent="true"
        android:textColor="#ffffff"
        android:background="@drawable/btn_bacakground"
        android:id="@+id/btn_addimg"/>
    </RelativeLayout>


</LinearLayout>
