<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
   android:background="#eeeeee"
   android:orientation="vertical"
   >
<RelativeLayout 
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:background="@color/title_background">
    <ImageView 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/nav_my_information"
        android:layout_centerVertical="true"
        android:layout_marginLeft="10dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/title_note" 
        android:textColor="@color/title_text_color"
        android:textSize="15sp"
        android:layout_centerInParent="true"/>
       <ImageView 
           android:id="@+id/home_search_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/nav_search"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_marginRight="10dp"/>
</RelativeLayout>
<android.support.v4.view.ViewPager
    android:id="@+id/viewpager"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:background="#0000ff"/>
<LinearLayout 
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:orientation="horizontal">
    <TextView 
        android:id="@+id/tv_recommended"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:text="官方推荐"
        android:gravity="center"
        android:drawableTop="@drawable/home_btn_official_recommended"
        />
     <TextView 
         android:id="@+id/tv_topic"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:text="热门话题"
        android:gravity="center"
        android:drawableTop="@drawable/home_btn_hot_topic"/>
      <TextView 
          android:id="@+id/tv_experts"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:text="专家问答"
        android:gravity="center"
        android:drawableTop="@drawable/home_btn_experts"/>
</LinearLayout>
<View 
    android:layout_width="match_parent"
    android:layout_height="10dp"
    android:background="#eeeeee"/>
<!-- groupIndicator去掉分组显示 -->
<ExpandableListView 
    android:id="@+id/expandlable_listview"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:scrollbars="none"
    android:dividerHeight="5dp"
    android:divider="#cccccc"
    android:groupIndicator="@null"
    android:footerDividersEnabled="true"

    ></ExpandableListView>

</LinearLayout>
